<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.languagetool.server.WikipediaMapper">
    <select id="selectWikipediaArticle" resultType="org.languagetool.server.CorpusArticleEntry">
        SELECT * FROM corpus_article WHERE id=#{id}
    </select>
    <select id="selectWikipediaSuggestions" resultType="org.languagetool.server.CorpusMatchEntry">
        SELECT * FROM corpus_match ORDER BY RAND() LIMIT 10
    </select>
    <select id="selectWikipediaSuggestion" resultType="org.languagetool.server.CorpusMatchEntry">
        SELECT * FROM corpus_match WHERE id=#{id}
    </select>
    <select id="selectWikipediaHtmlNodes" resultType="org.languagetool.tools.HtmlTools$HtmlAnonymizer$HtmlNode">
        SELECT * FROM corpus_article_html_node WHERE article_id=#{articleId}
    </select>
    <select id="selectWikipediaHtmlAttributes" resultType="org.languagetool.tools.HtmlTools$HtmlAnonymizer$HtmlAttribute">
        SELECT * FROM corpus_article_html_attribute WHERE article_id=#{articleId}
    </select>
</mapper>
